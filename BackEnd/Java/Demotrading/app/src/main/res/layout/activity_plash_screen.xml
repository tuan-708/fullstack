<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlashScreenActivity">

    <ImageView
        android:id="@+id/image_Logo"
        android:layout_width="261dp"
        android:layout_height="174dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bitcoin_emblem" />

    <TextView
        android:id="@+id/lbNameApp"
        android:layout_width="258dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Investment Portfolio "
        android:textAlignment="center"
        android:textColor="#D5FF9800"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_Logo"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/image_Logo"
        app:layout_constraintTop_toBottomOf="@+id/image_Logo" />
</androidx.constraintlayout.widget.ConstraintLayout>