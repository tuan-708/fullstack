@page
@model StoreManagement.Pages.Admin.Users.Roles.CreateModel
@{
    ViewData["Title"] = "Admin - Tạo vai trò";
}

@section Styles {
    <link href="@Url.Content("~/admin/css/admin.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/admin/css/admin-roles.css")" rel="stylesheet" type="text/css" />
}

<div class="row mt-3">
    <div class="col-md-12">
        <div class="row">
            <partial name="_StatusMessage" for="StatusMessage" />
            
            <div class="mb-3">
                @{
                    string linkCurrent = Url.RouteUrl(ViewContext.RouteData.Values);
                    var e = linkCurrent.Split("/");
                    var l = "";
                    foreach (var i in e)
                    {
                        if (i != "")
                        {
                            l += @i + "/";
                            <a class="Breadcrumb" href="/@l">/@i</a>
                        }
                    }
                }
            </div>



            <div class="col-md-4">
                <form method="post">
                    <h5>Tạo 1 vai trò</h5>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="admin" />
                        <label asp-for="Input.Name" class="form-label"></label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Tạo</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
